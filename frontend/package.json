{
    "name": "pizzaql-frontend",
    "version": "0.2.0",
    "description": "Frontend for PizzaQL",
    "scripts": {
        "dev": "next",
        "build": "next build",
        "start": "next start",
        "test": "xo && stylelint './pages/**/*.js'"
    },
    "main": "pages/index.js",
    "author": "Antoni Kepinski <a@kepinski.me> (https://kepinski.me)",
    "license": "MIT",
    "devDependencies": {
        "@babel/core": "^7.8.3",
        "@zeit/next-css": "^1.0.1",
        "babel-eslint": "^10.0.3",
        "babel-plugin-styled-components": "^1.10.6",
        "eslint-config-xo-react": "^0.22.0",
        "eslint-plugin-react": "^7.18.0",
        "eslint-plugin-react-hooks": "^2.3.0",
        "next-fonts": "^1.0.3",
        "next-offline": "^4.0.6",
        "stylelint": "^13.0.0",
        "stylelint-config-recommended": "^3.0.0",
        "stylelint-config-styled-components": "^0.1.1",
        "stylelint-processor-styled-components": "^1.9.0",
        "xo": "*"
    },
    "dependencies": {
        "@apollo/react-hooks": "^3.1.3",
        "@blueprintjs/core": "^3.23.1",
        "@blueprintjs/icons": "^3.13.0",
        "@pizzaql/hours-helper": "^0.4.0",
        "apollo-boost": "^0.4.7",
        "auth0-js": "^9.12.2",
        "core-js": "^3.6.4",
        "graphql": "^14.5.8",
        "js-cookie": "^2.2.1",
        "jsonwebtoken": "^8.5.1",
        "next": "^9.2.1",
        "node-fetch": "^2.6.0",
        "prop-types": "^15.7.2",
        "react": "^16.12.0",
        "react-dom": "^16.12.0",
        "react-stripe-checkout": "^2.6.3",
        "react-use-form-state": "^0.12.1",
        "styled-components": "^5.0.0",
        "yup": "^0.28.0"
    },
    "xo": {
        "nodeVersion": ">=10",
        "parser": "babel-eslint",
        "envs": [
            "node",
            "browser"
        ],
        "globals": [
            "describe",
            "it",
            "cy",
            "expect",
            "beforeEach"
        ],
        "ignores": "cypress",
        "extends": "xo-react",
        "settings": {
            "react": {
                "version": "16.12"
            }
        },
        "rules": {
            "import/no-unassigned-import": "off",
            "import/no-unresolved": "off",
            "import/no-named-as-default": "off",
            "unicorn/filename-case": "off",
            "unicorn/catch-error-name": "off",
            "react/jsx-sort-props": "off",
            "react/prop-types": "off",
            "react/boolean-prop-naming": "off"
        }
    }
}
